// Main styles

html, body {
  width: 100%;
  height: 100%;
  margin: 0;
  padding: 0;
}
body {
  #loading {
    display: none;
    position: fixed;
    width: 100vw;
    height: 100vh;
    background: transparentize(black, .3);
    z-index: 999;

    .loader {
      @include animation(load8 1.1s infinite linear);
      @include transform(translateZ(0));
      @include position(fixed, 0 0 0 0);
      animation: load8 1.1s infinite linear;
      border-bottom: 1.1em solid rgba(255, 255, 255, 0.2);
      border-left: 1.1em solid #ffffff;
      border-right: 1.1em solid rgba(255, 255, 255, 0.2);
      border-top: 1.1em solid rgba(255, 255, 255, 0.2);
      font-size: 10px;
      margin: auto;
      position: fixed;
      text-indent: -9999em;
    }

    .loader, .loader:after {
      border-radius: 50%;
      width: 10em;
      height: 10em;
    }

    @include keyframes(load8) {
      0% {
        -webkit-transform: rotate(0deg);
        transform: rotate(0deg);
      }
      100% {
        -webkit-transform: rotate(360deg);
        transform: rotate(360deg);
      }
    }
  }

  .wrap {
    width: 100%;
    height: auto;
    min-height: 100%;
    $hero-background-top: transparentize(black, 0.2);
    $hero-background-bottom: transparentize(black, 0.9);
    $hero-color: white;
    $gradient-angle: -250deg;
    $header-image: '<%= asset_path 'bawa-back.png' %>';

    @include background-image(linear-gradient($gradient-angle, $hero-background-bottom, $hero-background-top), url($header-image), no-repeat $hero-background-top scroll);
    background-position: top;
    background-repeat: no-repeat;
    background-size: cover;

    .content {
      @include container(1140px);
      min-height: 500px;
      width: 95%;
      margin: 0 auto;

      h1 {
        color: $white;
        text-align: center;
        small {
          color: $white;
        }
      }
    }
  }
}

