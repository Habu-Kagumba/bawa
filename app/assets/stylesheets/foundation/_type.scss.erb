$base-line-height: 1.5em !default;
$base-spacing: 1.5em !default;
$base-font-color: $dark-gray !default;
$sans-serif: 'Open Sans', sans-serif;
$serif: 'Roboto Slab', serif;
$medium-screen: 600px;

* {
  text-align: left;
  color: $base-font-color;
  line-height: $base-line-height;
  font-family: $sans-serif;
  font-weight: 300;
  letter-spacing: 1;
}

h1, h2, h3, p {
  margin: 0;
}

hr {
  border-bottom: 1px solid $light-gray;
  border-left: 0;
  border-right: 0;
  border-top: 0;
  margin: $base-spacing 0;
}

a {
  color: $color-sec;
  text-decoration: none;
}

h1 {
  font-family: $serif;
  font-size: 1.6em;
  font-weight: 400;
  margin-bottom: 0.6em;

  @include breakpoint($medium-screen) {
    font-size: 2.4em;
  }
}

h2 {
  font-family: $sans-serif;
  font-size: 1.1em;
  font-weight: 400;
  line-height: 1.5em;
  margin-bottom: 1.2em;

  @include breakpoint($medium-screen) {
    font-size: 1.3em;
  }
}

h3 {
 font-family: $serif;
 font-size: 1em;
 font-weight: 600;
 line-height: 1.4em;
 margin-bottom: 0.5em;
 text-transform: uppercase;
}

.date {
  color: transparentize($base-font-color, 0.6);
  font-family: $serif;
  font-size: 0.8em;
  margin-bottom: 0.5em;
}

hr {
  width: 3em;
}

