<% provide(:title, "Edit profile") %>
<section>
  <div class="content user-content <%= controller_name %> <%= action_name %>">
    <div class="heading">
      <%= gravatar_for @user %>
      <h1>Update your profile</h1>
    </div>


    <div class="profile">
        <aside>
            <%= render "users/sidebar" %>
        </aside>
        <main>
          <div class="form">
            <% if @user.errors.any? %>
              <div class="flash-error">
                The form contains <%= pluralize(@user.errors.count, "error") %>.
              </div>
              <ul class="errors">
                <% @user.errors.full_messages.each do |msg| %>
                  <li><i class="icon-close"></i> <%= msg %></li>
                <% end %>
              </ul>
            <% end %>

            <%= form_for(@user, html: { class: "user-edit-forms" }) do |f| %>
              <div class="fname">
                <label for="user_first_name"><i class="icon-user"></i> First Name</label>
                <%= f.text_field :first_name, placeholder: "Enter your first name." %>
              </div>

              <div class="lname">
                <label for="user_last_name"><i class="icon-user"></i> Last Name</label>
                <%= f.text_field :last_name, placeholder: "Enter your last name." %>
              </div>

              <div class="username">
                <label for="user_username"><i class="icon-user"></i> Username</label>
                <%= f.text_field :username, placeholder: "Enter your username." %>
              </div>

              <div class="email">
                <label for="user_email"><i class="icon-envelope"></i> Email</label>
                <%= f.email_field :email, placeholder: "Enter your email address." %>
              </div>

              <div class="pwd">
                <label for="user_password"><i class="icon-lock"></i> Password</label>
                <%= f.password_field :password, placeholder: "Enter your password." %>
              </div>

              <div class="pwd-conf">
                <label for="user_password_confirmation"><i class="icon-lock"></i> Password Confirmation</label>
                <%= f.password_field :password_confirmation, placeholder: "Repeat your password." %>
              </div>

              <div class="submit">
                <%= f.submit "Save changes" %>
              </div>
            <% end %>
          </div>
        </main>
    </div>
  </div>
</section>
