// Override susy defaults

$susy: (
  global-box-sizing: border-box
);

@include border-box-sizing();

$simple-line-font-path        : "fonts";

#{$all-buttons} {
  background-color: $color-sec;
}

#{$all-buttons-focus},
#{$all-buttons-hover} {
  background-color: darken($color-sec, 10%);
}

#{$all-buttons-active} {
  background-color: $color-sec2;
}

$base-spacing: 1.5em !default;
$flashes: (
  "alert": #fff6bf,
  "error": #fbe3e4,
  "notice": #e5edf8,
  "success": #e6efc2,
) !default;

@each $flash-type, $color in $flashes {
  .flash-#{$flash-type} {
    background-color: $color;
    color: shade($color, 60%);
    display: block;
    margin-bottom: $base-spacing / 2;
    padding: $base-spacing / 2;
    text-align: center;

    a {
      color: shade($color, 70%);
      text-decoration: underline;

      &:focus,
      &:hover {
        color: shade($color, 90%);
      }
    }
  }
}

// Application includes
@import 'helpers/hacks';
@import 'helpers/mixins';
@import 'main/header';
@import 'main/footer';
@import 'main/forms';
@import 'main/content';
@import 'main/users';
@import 'main/sessions';

// Main styles

html, body {
  width: 100%;
  height: 100%;
  margin: 0;
  padding: 0;
}
body {
  .wrap {
    width: 100%;
    height: auto;
    min-height: 100%;
    $hero-background-top: transparentize(black, 0.2);
    $hero-background-bottom: transparentize(black, 0.9);
    $hero-color: white;
    $gradient-angle: -250deg;
    $header-image: '<%= asset_path 'bawa-back.png' %>';

    @include background-image(linear-gradient($gradient-angle, $hero-background-bottom, $hero-background-top), url($header-image), no-repeat $hero-background-top scroll);
    background-position: top;
    background-repeat: no-repeat;
    background-size: cover;

    .content {
      @include container(1140px);
      min-height: 500px;
      width: 95%;
      margin: 0 auto;
      h1 {
        color: $white;
        text-align: center;
        small {
          color: $white;
        }
      }
    }
  }
}

