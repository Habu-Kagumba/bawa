// Override susy defaults

$susy: (
  global-box-sizing: border-box
);

@include border-box-sizing();

// Application includes
@import 'helpers/hacks';
@import 'helpers/mixins';
@import 'main/header';
@import 'main/content';
@import 'main/footer';

// Main styles

* {
  @include clearfix;
}

html, body {
  width: 100%;
  height: 100%;
  margin: 0;

}
body {
  .wrap {
    width: 100%;
    height: 100%;
    $hero-background-top: black;
    $hero-background-bottom: grey;
    $hero-color: white;
    $gradient-angle: 45deg;
    $header-image: '<%= asset_path 'bawa-back.png' %>';

    @include background(url($header-image), linear-gradient($gradient-angle, $hero-background-bottom, $hero-background-top), no-repeat $hero-background-top scroll);
    background-position: top;
    background-repeat: no-repeat;
    background-size: cover;
  }
}

